# ILAI Production Environment Variables
# Copy this file to .env and fill in your values

# ========== Database (Oracle Autonomous DB) ==========
# Get connection string from OCI Console -> Autonomous Database -> DB Connection
DB_URL=jdbc:oracle:thin:@ilaidb_high?TNS_ADMIN=/app/wallet
DB_USER=ADMIN
DB_PASSWORD=YourSecurePassword123!

# ========== Alternative: PostgreSQL (if using external PostgreSQL) ==========
# DB_URL=jdbc:postgresql://your-host:5432/ilai
# DB_USER=postgres
# DB_PASSWORD=your-password

# ========== Security ==========
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters

# ========== AI Services ==========
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key

# Get from: https://console.groq.com/keys
GROQ_API_KEY=your-groq-api-key

# ========== Payments (Razorpay) ==========
# Get from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxx
RAZORPAY_KEY_SECRET=your-razorpay-secret

# ========== Email (Gmail SMTP) ==========
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# ========== Domain ==========
DOMAIN=ilai.co.in
FRONTEND_URL=https://ilai.co.in
API_URL=https://api.ilai.co.in

# ========== Redis ==========
REDIS_HOST=redis
REDIS_PORT=6379

# ========== Object Storage (Oracle or Cloudflare R2) ==========
# Oracle Object Storage
OCI_BUCKET_NAME=ilai-uploads
OCI_NAMESPACE=your-namespace
OCI_REGION=ap-mumbai-1

# OR Cloudflare R2 (alternative)
# R2_ACCOUNT_ID=your-account-id
# R2_ACCESS_KEY=your-access-key
# R2_SECRET_KEY=your-secret-key
# R2_BUCKET=ilai-uploads
