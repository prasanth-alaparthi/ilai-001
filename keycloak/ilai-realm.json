{
    "realm": "ilai",
    "enabled": true,
    "sslRequired": "external",
    "registrationAllowed": true,
    "loginWithEmailAllowed": true,
    "duplicateEmailsAllowed": false,
    "resetPasswordAllowed": true,
    "editUsernameAllowed": false,
    "bruteForceProtected": true,
    "permanentLockout": false,
    "maxFailureWaitSeconds": 900,
    "minimumQuickLoginWaitSeconds": 60,
    "waitIncrementSeconds": 60,
    "quickLoginCheckMilliSeconds": 1000,
    "maxDeltaTimeSeconds": 43200,
    "failureFactor": 5,
    "roles": {
        "realm": [
            {
                "name": "STUDENT",
                "description": "Student role - default for new users"
            },
            {
                "name": "TEACHER",
                "description": "Teacher role - can create classrooms and assignments"
            },
            {
                "name": "PARENT",
                "description": "Parent role - can monitor child accounts"
            },
            {
                "name": "ADMIN",
                "description": "Administrator role - full access"
            }
        ]
    },
    "defaultRoles": [
        "STUDENT"
    ],
    "clients": [
        {
            "clientId": "ilai-frontend",
            "name": "ILAI Frontend Application",
            "enabled": true,
            "publicClient": true,
            "standardFlowEnabled": true,
            "implicitFlowEnabled": false,
            "directAccessGrantsEnabled": true,
            "redirectUris": [
                "http://localhost:5173/*",
                "http://localhost/*",
                "https://ilai.co.in/*",
                "https://www.ilai.co.in/*"
            ],
            "webOrigins": [
                "http://localhost:5173",
                "http://localhost",
                "https://ilai.co.in",
                "https://www.ilai.co.in"
            ],
            "protocol": "openid-connect",
            "attributes": {
                "pkce.code.challenge.method": "S256"
            },
            "defaultClientScopes": [
                "web-origins",
                "profile",
                "roles",
                "email"
            ]
        },
        {
            "clientId": "ilai-backend",
            "name": "ILAI Backend Services",
            "enabled": true,
            "publicClient": false,
            "bearerOnly": true,
            "standardFlowEnabled": false,
            "protocol": "openid-connect"
        }
    ],
    "identityProviders": [
        {
            "alias": "google",
            "providerId": "google",
            "enabled": true,
            "trustEmail": true,
            "storeToken": false,
            "addReadTokenRoleOnCreate": false,
            "firstBrokerLoginFlowAlias": "first broker login",
            "config": {
                "clientId": "${GOOGLE_CLIENT_ID}",
                "clientSecret": "${GOOGLE_CLIENT_SECRET}",
                "defaultScope": "openid profile email"
            }
        }
    ],
    "identityProviderMappers": [
        {
            "name": "email",
            "identityProviderAlias": "google",
            "identityProviderMapper": "hardcoded-attribute-idp-mapper",
            "config": {
                "attribute": "emailVerified",
                "attribute.value": "true"
            }
        }
    ],
    "users": [
        {
            "username": "admin@ilai.co.in",
            "email": "admin@ilai.co.in",
            "enabled": true,
            "emailVerified": true,
            "firstName": "Admin",
            "lastName": "User",
            "realmRoles": [
                "ADMIN"
            ],
            "credentials": [
                {
                    "type": "password",
                    "value": "admin123",
                    "temporary": true
                }
            ]
        },
        {
            "username": "test@test.com",
            "email": "test@test.com",
            "enabled": true,
            "emailVerified": true,
            "firstName": "Test",
            "lastName": "User",
            "realmRoles": [
                "STUDENT"
            ],
            "credentials": [
                {
                    "type": "password",
                    "value": "test123",
                    "temporary": false
                }
            ]
        }
    ],
    "smtpServer": {
        "host": "${SMTP_HOST:smtp.gmail.com}",
        "port": "${SMTP_PORT:587}",
        "from": "${SMTP_FROM:noreply@ilai.co.in}",
        "auth": true,
        "starttls": true,
        "user": "${SMTP_USER}",
        "password": "${SMTP_PASSWORD}"
    },
    "eventsEnabled": true,
    "eventsListeners": [
        "jboss-logging"
    ],
    "enabledEventTypes": [
        "LOGIN",
        "LOGIN_ERROR",
        "LOGOUT",
        "REGISTER",
        "REGISTER_ERROR",
        "CODE_TO_TOKEN",
        "CODE_TO_TOKEN_ERROR",
        "REFRESH_TOKEN",
        "REFRESH_TOKEN_ERROR"
    ],
    "adminEventsEnabled": true,
    "adminEventsDetailsEnabled": true
}